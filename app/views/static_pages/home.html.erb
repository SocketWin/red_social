<% provide(:title, 'Home') %>
<% if signed_in? %>
    <div class="row">
      <aside class="span4">
        <section>
          <%= render 'shared/user_info', object: current_user %>
        </section>
        <section>
          <%= render 'shared/post_form' %>
        </section>
      </aside>
      <div class="span8">
        <h1>Últimos posts</h1>
        <% if @feed_posts.any? %>
            <ol class="posts">
              <%= render partial: 'shared/feed_post', collection: @feed_posts %>
            </ol>
            <%= will_paginate @feed_posts %>
        <% end %>
      </div>
    </div>
<% else %>
    <div class="center hero-unit">
      <h1>Bienvenido a Red Social</h1>
      <h2>
        Estás en el home de la aplicación creada para el curso Ruby on Rails de
        <a href="http://www.imaginaformacion.com/">Imagina Formación</a>. Esperamos que os
        sirva para aprender.
      </h2>
      <%= link_to "Regístrate!", signup_path, class: "btn btn-primary btn-large" %>
    </div>
<% end %>