<h1>
  <%= image_tag(object.image, alt: "avatar", class: "avatar") %>
  <%= object.name %><br>
  <%= object.surname %><br>
  <%= image_tag("#{object.sex}.png", alt: "sexo") %><br>
</h1>
<br><br>
<section>
  <div class="stats">
    <a href="<%= following_user_path(object) %>">
      <strong class="stat">
        <%= object.followed_users.count %>
      </strong>
      following
    </a>
    <a href="<%= followers_user_path(object) %>">
      <strong class="stat">
        <%= object.followers.count %>
      </strong>
      followers
    </a>
  </div>
</section>